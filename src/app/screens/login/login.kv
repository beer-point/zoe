#:kivy 2.0

<LoginScreen>:
    name: 'login'
    BoxLayout:
        canvas:
            Color:
                rgba: 255, 255, 255, 1
            Rectangle:
                size: self.size
                pos: self.pos
        orientation: 'vertical'
        spacing: 8
        
        Title:
            text_size: self.width, None
            size_hint: 1, None
            height: self.texture_size[1]
            text:   "Â¡Escanea el qr desde nuestra app y comenza a servirte!" if not root.is_generating_sync_code else ""
            halign: 'center'
            valign: 'middle'

        MDRectangleFlatButton:
            text: 'login'
            on_release: root.login()
            halign: 'center'
            valign: 'middle'
        MDSpinner:
            size_hint: None, None
            size: dp(46), dp(46)
            pos_hint: {'center_x': .5, 'center_y': .5}
            active: True if root.is_generating_sync_code else False
        Image:
            id: qr_image
            nocache:True
            allow_stretch: True
            source: '' if root.is_generating_sync_code else root.img
        